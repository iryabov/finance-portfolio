<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-4.0"
        name="Dial"
        service-class="com.github.iryabov.invest.service.InvestService">
    <fields>
        <field id="ticker.id" domain="string"/>
        <field id="opened" domain="localdate"/>
        <field id="type.id" domain="string"/>
        <field id="currency.id" domain="string"/>
        <field id="volume" domain="string"/>
        <field id="quantity" domain="integer"/>
        <field id="account.id" domain="integer" mapping="['account_id']"/>
    </fields>

    <operations>
        <operation id="addDial">
            <invocation>
                <java method="addDial" class="com.github.iryabov.invest.service.InvestService">
                    <spring/>
                    <arguments>
                        <argument type="primitive" name="accountId"/>
                        <argument type="entity" name="form" class="com.github.iryabov.invest.model.DialForm"/>
                    </arguments>
                </java>
            </invocation>
            <in>
                <field id="account.id" mapping="[0]"/>
                <field id="asset.id" mapping="[1].ticker"/>
                <field id="opened" mapping="[1].opened"/>
                <field id="type.id" mapping="[1].type"/>
                <field id="currency.id" mapping="[1].currency"/>
                <field id="volume" mapping="[1].volume"/>
                <field id="quantity" mapping="[1].quantity"/>
            </in>
            <out>
                <field id="id" domain="long" mapping="#this"/>
            </out>
        </operation>
        <operation id="deleteDial">
            <invocation>
                <java method="deleteDial" class="com.github.iryabov.invest.service.InvestService">
                    <spring/>
                    <arguments>
                        <argument type="primitive" name="accountId"/>
                        <argument type="primitive" name="id"/>
                    </arguments>
                </java>
            </invocation>
            <in>
                <field id="account.id" param="account_id" mapping="[0]"/>
                <field id="id" mapping="[1]"/>
            </in>
        </operation>
        <operation id="deactivateDial">
            <invocation>
                <java method="deactivateDial" class="com.github.iryabov.invest.service.InvestService">
                    <spring/>
                    <arguments>
                        <argument type="primitive" name="accountId"/>
                        <argument type="primitive" name="id"/>
                    </arguments>
                </java>
            </invocation>
            <in>
                <field id="account.id" param="account_id" mapping="[0]"/>
                <field id="id" mapping="[1]"/>
            </in>
        </operation>
    </operations>
</object>
