<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
      name="My accounts">
    <toolbar place="topLeft">
        <button icon="fa fa-plus" label="Add account" color="primary" widget-id="accounts" model="filter">
            <open-page page-id="accountNew" submit-operation-id="addAccount"/>
        </button>
    </toolbar>
    <regions>
        <region>
            <list id="accounts" query-id="account" route="/">
                <content>
                    <left-top text-field-id="name">
                        <text/>
                    </left-top>
                    <left-bottom text-field-id="totalMarketProfitPercent">
                        <text/>
                    </left-bottom>
                </content>
                <rows>
                    <click>
                        <open-page page-id="accountAssets" route="/:account_id/assets">
                            <path-param name="account_id" value="{id}"/>
                        </open-page>
                    </click>
                </rows>
                <pagination/>
            </list>
        </region>
    </regions>

</page>
