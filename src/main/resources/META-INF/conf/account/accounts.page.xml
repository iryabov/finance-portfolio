<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
      name="My accounts">
    <toolbar place="topLeft">
        <group>
            <button icon="fa fa-plus" label="Add account" color="primary" widget-id="accounts" model="filter">
                <open-page page-id="accountNew" submit-operation-id="addAccount"/>
            </button>
        </group>
        <button icon="fa fa-exchange" label="Remittance" widget-id="accounts" model="filter" type="icon">
            <open-page page-id="remittanceForm" submit-operation-id="remittanceDeal"/>
        </button>
    </toolbar>
    <regions>
        <region>
            <form id="total" query-id="totalAccounts" route="/">
                <fields>
                    <set field-label-location="left" field-label-align="right">
                        <row>
                            <col>
                                <output-text id="totalMarketValue" format="number 0,0.00"/>
                            </col>
                            <col>
                                <output-text id="totalMarketProfit" format="number 0,0.00"/>
                            </col>
                            <col>
                                <output-text id="totalDepositMarketProfitPercent"/>
                            </col>
                        </row>
                    </set>
                </fields>
            </form>
            <table id="accounts" query-id="accounts" route="/accounts" selection="none">
                <columns>
                    <column text-field-id="name" label="Name"/>
                    <column text-field-id="totalNetValue" label="Value">
                        <text format="number 0,0.00"/>
                    </column>
                    <column text-field-id="totalMarketDepositProfitPercent" label="Profit">
                        <badge text="{totalMarketProfit}" text-format="number 0,0.00" color="{totalMarketProfitColor}"/>
                    </column>
                </columns>
                <rows>
                    <click>
                        <open-page page-id="accountDetails" route="/:account_id/details">
                            <path-param name="account_id" value="{id}"/>
                        </open-page>
                    </click>
                </rows>
                <pagination/>
            </table>
        </region>
    </regions>

</page>
