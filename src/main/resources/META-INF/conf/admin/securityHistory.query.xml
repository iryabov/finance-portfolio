<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       name="Asset history">
    <list result-mapping="#this.history" filters="security.id,period.id" count-mapping="#this.history.size()">
        <java method="getSecurity" class="com.github.iryabov.invest.service.InvestService">
            <spring/>
            <arguments>
                <argument type="primitive" name="ticker"/>
                <argument type="primitive" name="period"/>
            </arguments>
        </java>
    </list>
    <list result-mapping="T(java.util.Collections).emptyList()">
        <test operation="echo"/>
    </list>
    <fields>
        <field id="id">
            <select mapping="date"/>
        </field>
        <field id="ticker">
            <filters>
                <eq filter-id="security.id" mapping="[0]"/>
            </filters>
        </field>
        <field id="period">
            <filters>
                <eq filter-id="period.id" default-value="FIVE_YEARS" normalize="T(com.github.iryabov.invest.relation.Period).valueOf(#this)" mapping="[1]"/>
            </filters>
        </field>
        <field id="date">
            <select mapping="date"/>
        </field>
        <field id="price">
            <select mapping="price"/>
        </field>
    </fields>
</query>
