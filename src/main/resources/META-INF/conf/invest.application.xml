             default-state="maxi" toggled-state="mini">
        <nav>
            <menu-item name="Accounts" icon="fa fa-university">
                <open-page page-id="accounts" route="/accounts"/>
            </menu-item>
            <menu-item name="Portfolios" icon="fa fa-suitcase">
                <open-page page-id="portfolios" route="/portfolios"/>
            </menu-item>
        </nav>
        <extra-menu>
            <dropdown-menu name="Admin" icon="fa fa-cog">
                <menu-item name="Securities">
                    <open-page page-id="securities" route="/admin/securities"/>
                </menu-item>
                <menu-item name="Currencies">
                    <open-page page-id="currencies" route="/admin/currencies"/>
                </menu-item>
