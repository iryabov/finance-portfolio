<?xml version='1.0' encoding='UTF-8'?>
<top-left-right-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0"
                 name="Analytics">
    <top>
        <form>
            <fields>
                <row>
                    <col>
                        <select id="period" label="Period" no-label-block="true" no-label="true">
                            <default-value id="2020" name="2020"/>
                            <options>
                                <option id="2018" name="2018"/>
                                <option id="2019" name="2019"/>
                                <option id="2020" name="2020"/>
                                <option id="2021" name="2021"/>
                                <option id="2022" name="2022"/>
                            </options>
                        </select>
                    </col>
                </row>
            </fields>
        </form>
        <form>
            <fields>

                <set field-label-location="left" field-label-width="120px" field-label-align="right">
                    <output-text id="marketValue" label="Deposit" default-value="111"/>
                    <output-text id="marketValue" label="Net value"/>
                    <output-text id="marketValue" label="Market value"/>
                </set>
                <line field-label-location="left" field-label-width="120px" field-label-align="right" collapsible="false">
                    <output-text id="marketValue" label="Dividends"/>
                    <output-text id="marketValue" label="Coupons"/>
                    <output-text id="marketValue" label="Sales profit"/>
                </line>
                <line field-label-location="left" field-label-width="120px" field-label-align="right" collapsible="false">
                    <output-text id="marketValue" label="Total profit"/>
                    <output-text id="marketValue" label="Withdrawals"/>
                </line>
            </fields>
        </form>
    </top>
    <left>
        <panel collapsible="false">
            <chart id="class" query-id="analytics" name="Classes">
                <pie inner-radius="50"
                     outer-radius="80"
                     name-field-id="name"
                     value-field-id="value"
                     color="#82ca9d"
                     has-label="true"/>
                <pre-filters>
                    <eq field-id="portfolioId" param="portfolio_id"/>
                    <eq field-id="type" value="CLASS"/>
                </pre-filters>
            </chart>
        </panel>
        <panel collapsible="false">
            <chart id="country" query-id="analytics" name="Countries">
                <pie inner-radius="50"
                     outer-radius="80"
                     name-field-id="name"
                     value-field-id="value"
                     color="#db4646"
                     has-label="true"/>
                <pre-filters>
                    <eq field-id="portfolioId" param="portfolio_id"/>
                    <eq field-id="type" value="COUNTRY"/>
                </pre-filters>
            </chart>
        </panel>
    </left>
    <right width="50%">
        <panel collapsible="false">
            <chart id="sector" query-id="analytics" name="Sectors">
                <pie inner-radius="50"
                     outer-radius="80"
                     name-field-id="name"
                     value-field-id="value"
                     color="#17a2b8"
                     has-label="true"/>
                <pre-filters>
                    <eq field-id="portfolioId" param="portfolio_id"/>
                    <eq field-id="type" value="SECTOR"/>
                </pre-filters>
            </chart>
        </panel>
        <panel collapsible="false">
            <chart id="currency" query-id="analytics" name="Currencies">
                <pie inner-radius="50"
                     outer-radius="80"
                     name-field-id="name"
                     value-field-id="value"
                     color="#ffc107"
                     has-label="true"/>
                <pre-filters>
                    <eq field-id="portfolioId" param="portfolio_id"/>
                    <eq field-id="type" value="CURRENCY"/>
                </pre-filters>
            </chart>
        </panel>
    </right>
</top-left-right-page>
