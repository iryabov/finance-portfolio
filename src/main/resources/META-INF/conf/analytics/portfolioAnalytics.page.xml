<?xml version='1.0' encoding='UTF-8'?>
<left-right-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
                 name="Analytics">
    <left>
        <panel collapsible="false">
            <chart id="class" query-id="analytics" name="Classes">
                <pie inner-radius="50"
                     outer-radius="80"
                     name-field-id="name"
                     value-field-id="value"
                     color="#82ca9d"
                     has-label="true"/>
                <pre-filters>
                    <eq field-id="portfolioId" param="portfolio_id"/>
                    <eq field-id="type" value="CLASS"/>
                </pre-filters>
            </chart>
        </panel>
        <panel collapsible="false">
            <chart id="country" query-id="analytics" name="Countries">
                <pie inner-radius="50"
                     outer-radius="80"
                     name-field-id="name"
                     value-field-id="value"
                     color="#db4646"
                     has-label="true"/>
                <pre-filters>
                    <eq field-id="portfolioId" param="portfolio_id"/>
                    <eq field-id="type" value="COUNTRY"/>
                </pre-filters>
            </chart>
        </panel>
    </left>
    <right>
        <panel collapsible="false">
            <chart id="sector" query-id="analytics" name="Sectors">
                <pie inner-radius="50"
                     outer-radius="80"
                     name-field-id="name"
                     value-field-id="value"
                     color="#17a2b8"
                     has-label="true"/>
                <pre-filters>
                    <eq field-id="portfolioId" param="portfolio_id"/>
                    <eq field-id="type" value="SECTOR"/>
                </pre-filters>
            </chart>
        </panel>
        <panel collapsible="false">
            <chart id="currency" query-id="analytics" name="Currencies">
                <pie inner-radius="50"
                     outer-radius="80"
                     name-field-id="name"
                     value-field-id="value"
                     color="#ffc107"
                     has-label="true"/>
                <pre-filters>
                    <eq field-id="portfolioId" param="portfolio_id"/>
                    <eq field-id="type" value="CURRENCY"/>
                </pre-filters>
            </chart>
        </panel>
    </right>
</left-right-page>
