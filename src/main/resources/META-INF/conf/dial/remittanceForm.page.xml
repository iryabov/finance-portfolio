<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
             name="Money remittance">
    <form object-id="dial">
        <fields>
            <date-time id="opened" label="Opened" required="true" default-value="{moment().format('YYYY-MM-DD')}"/>
           <select id="accountFrom" param="account_from" label="From" query-id="account" label-field-id="name">
           </select>
            <select id="accountTo" param="account_to" label="To" query-id="account" label-field-id="name">
            </select>
            <radio-group id="currency" label="Currency" required="true" inline="true">
                <default-value id="RUB"/>
                <options>
                    <option id="RUB" name="RUB"/>
                    <option id="USD" name="USD"/>
                    <option id="EUR" name="EUR"/>
                </options>
            </radio-group>
            <input-money id="quantity" label="Quantity" required="true">
            </input-money>
        </fields>
    </form>
</simple-page>
