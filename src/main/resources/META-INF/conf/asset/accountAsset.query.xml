<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       name="Account asset">
    <list result-mapping="#this.assets" filters="accountId,currency" count-mapping="#this.assets.size()">
        <java method="getAccount" class="com.github.iryabov.invest.service.InvestService">
            <spring/>
            <arguments>
                <argument type="primitive" name="accountId"/>
                <argument type="primitive" name="currency"/>
            </arguments>
        </java>
    </list>
    <unique result-mapping="#this" filters="accountId,ticker,currency">
        <java method="getAsset" class="com.github.iryabov.invest.service.InvestService">
            <spring/>
            <arguments>
                <argument type="primitive" name="accountId"/>
                <argument type="primitive" name="currency"/>
                <argument type="primitive" name="ticker"/>
            </arguments>
        </java>
    </unique>

    <fields>
        <field id="accountId">
            <filters>
                <eq filter-id="accountId" mapping="[0]"/>
            </filters>
        </field>
        <field id="currency">
            <filters>
                <eq filter-id="currency" default-value="${portfolio.currency}"
                    normalize="T(com.github.iryabov.invest.relation.Currency).valueOf(#this)"
                mapping="[1]"/>
            </filters>
        </field>
        <field id="id">
            <select mapping="assetTicker"/>
            <filters>
                <eq filter-id="ticker" mapping="[2]"/>
            </filters>
        </field>
        <field id="asset.ticker">
            <select mapping="assetTicker"/>
        </field>
        <field id="asset.name">
            <select mapping="assetName"/>
        </field>
        <field id="asset.class">
            <select mapping="assetClass"/>
        </field>
        <field id="quantity">
            <select mapping="quantity"/>
        </field>
        <field id="netValue">
            <select mapping="netValue"/>
        </field>
        <field id="marketValue">
            <select mapping="marketValue"/>
        </field>
        <field id="valueProfit">
            <select mapping="valueProfit"/>
        </field>
        <field id="fixedProfit">
            <select mapping="fixedProfit"/>
        </field>
        <field id="marketProfit">
            <select mapping="marketProfit"/>
        </field>
        <field id="netInterest">
            <select mapping="netInterest"/>
        </field>
        <field id="marketInterest">
            <select mapping="marketInterest"/>
        </field>
        <field id="profitInterest">
            <select mapping="profitInterest"/>
        </field>
    </fields>

</query>
