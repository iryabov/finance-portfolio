<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       name="Account">
    <list result-mapping="#this" count-mapping="size()">
        <java method="getAccounts" class="com.github.iryabov.invest.service.InvestService">
            <spring/>
        </java>
    </list>
    <unique result-mapping="#this" filters="id">
        <java method="getAccount" class="com.github.iryabov.invest.service.InvestService">
            <spring/>
            <arguments>
                <argument type="primitive" name="accountId"/>
            </arguments>
        </java>
    </unique>

    <fields>
        <field id="id">
            <select/>
        </field>
        <field id="name">
            <select/>
        </field>
        <field id="totalNetValue">
            <select/>
        </field>
        <field id="totalMarketValue">
            <select/>
        </field>
        <field id="totalValueProfit">
            <select/>
        </field>
        <field id="totalValueProfitPercent">
            <select/>
        </field>
        <field id="totalFixedProfit">
            <select/>
        </field>
        <field id="totalMarkedProfit">
            <select/>
        </field>
        <field id="totalDeposit">
            <select/>
        </field>

    </fields>

</query>
