<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
      name="{name}">
    <toolbar place="topLeft">
        <button id="addAssets" label="Add assets" widget-id="portfolio" icon="fa fa-plus" color="primary">
            <open-page page-id="portfolioAssetsAdd" route="/add"/>
        </button>
<!--        <button id="viewDeals" label="Deals history" widget-id="securities" model="filter"-->
<!--                icon="fa fa-history" type="icon">-->
<!--            <open-page page-id="accountDeals" route="/deals"/>-->
<!--        </button>-->
    </toolbar>
    <toolbar place="topRight">
        <button id="deletePortfolio" label="Delete portfolio" widget-id="portfolio"
                icon="fa fa-trash" type="icon" color="danger"
                confirm="true" confirm-text="Are you sure to delete portfolio {name}?">
            <invoke operation-id="deletePortfolio" close-on-success="true"
                    redirect-url="../../" redirect-target="application"/>
        </button>
    </toolbar>
    <regions>
        <region>
            <form id="portfolio" query-id="portfolios" route="/">
                <fields>
                    <set field-label-location="left" field-label-align="right">
                        <row>
                            <col>
                                <output-text id="totalMarketValue" format="number 0,0.00"/>
                            </col>
                            <col>
                                <output-text id="totalValueProfit" format="number 0,0.00" class="text-success"/>
                            </col>
                            <col>
                                <output-text id="totalDepositValueProfitPercent"/>
                            </col>
                            <col>
                                <output-text id="totalMarketProfit" format="number 0,0.00"/>
                            </col>
                            <col>
                                <output-text id="totalDepositMarketProfitPercent"/>
                            </col>
                        </row>
                    </set>
                </fields>
                <pre-filters>
                    <eq field-id="id" param="portfolio_id"/>
                </pre-filters>
            </form>
        </region>
        <region>
            <table id="assets" name="Assets" query-id="portfolioAssets" route="/assets" selection="none" size="100">
                <columns>
                    <column text-field-id="active" label="A" width="20px">
                        <checkbox>
                            <invoke operation-id="deactivateTarget" route="/deactivate" message-on-success="false"/>
                        </checkbox>
                    </column>
                    <column text-field-id="name" label="Name"/>
                    <column text-field-id="quantity" label="Quantity">
                        <text format="number 0,0"/>
                    </column>
                    <column text-field-id="marketValue" label="Value">
                        <text format="number 0,0.00"/>
                    </column>
                    <column text-field-id="marketProfitPercent" label="Profit">
                        <badge text="{marketProfitPercent}" text-format="number 0,0.00" color="{marketProfitColor}"/>
                    </column>
                    <column text-field-id="marketProfitProportion" label="Proportion">
                        <badge text="{marketProportion}"/>
                    </column>
                    <column text-field-id="" width="20px">
                        <toolbar>
                            <button id="delete" type="icon" label="Delete asset" icon="fa fa-trash" confirm="false">
                                <invoke operation-id="deleteTarget" route="/delete"/>
                            </button>
                        </toolbar>
                    </column>
                </columns>
                <rows>
                    <switch value-field-id="assetActive">
                        <case value="false">text-secondary</case>
                    </switch>
                    <click>
<!--                        <open-page page-id="assetDetails" route="/:asset_id/details">-->
<!--                            <path-param name="asset_id" value="{id}"/>-->
<!--                        </open-page>-->
                    </click>
                </rows>
                <pre-filters>
                    <eq field-id="portfolioId" param="portfolio_id"/>
                </pre-filters>
            </table>
        </region>
    </regions>

</page>
